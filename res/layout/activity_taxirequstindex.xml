<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/taxi_request_index_container"
    xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff303030"
    android:orientation="vertical"
	tools:context=".TaxiRequestIndex" >
    
	    
    <ListView android:layout_height="fill_parent" android:layout_width="fill_parent" 
        android:id="@+id/lv" android:divider="#535353" android:cacheColorHint="@android:color/transparent"   
        android:background="#303030"
        android:dividerHeight="1dp" 
     />

    <ProgressBar
        android:id="@+id/taxi_request_index_progressbar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
        
</RelativeLayout>
    
 